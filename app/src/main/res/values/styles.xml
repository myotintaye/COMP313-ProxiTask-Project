<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btnFAB">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--Buttons-->
    <style name="btnPrimaryLarge">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/btn_large_width</item>
        <item name="android:layout_height">@dimen/btn_large_height</item>
        <item name="android:paddingLeft">@dimen/padding_button_h</item>
        <item name="android:paddingRight">@dimen/padding_button_h</item>S
    </style>

    <style name="btnPrimaryLineLarge">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:background">@drawable/btn_primary_line</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/padding_button_h</item>
        <item name="android:paddingRight">@dimen/padding_button_h</item>
    </style>

    <style name="btnPrimary">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/padding_button_w</item>
        <item name="android:paddingRight">@dimen/padding_button_w</item>
        <item name="android:paddingTop">@dimen/padding_button_h</item>
        <item name="android:paddingBottom">@dimen/padding_button_h</item>
    </style>

    <style name="btnPrimaryLine">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:background">@drawable/btn_primary_line</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/padding_button_w</item>
        <item name="android:paddingRight">@dimen/padding_button_w</item>
        <item name="android:paddingTop">@dimen/padding_button_h</item>
        <item name="android:paddingBottom">@dimen/padding_button_h</item>
    </style>


    <style name="btnDark">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/padding_button_w</item>
        <item name="android:paddingRight">@dimen/padding_button_w</item>
    </style>


    <!-- Text -->

    <style name="txtTitleH1">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtNoContents">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtBigFigure">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="txtLabelSecondary">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="txtFieldValue">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="txtFieldInput">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- Layout -->
    <style name="layoutField">
        <item name="android:padding">@dimen/padding_field</item>
    </style>
    <style name="layoutInfoValue">
        <item name="android:padding">@dimen/padding_field</item>
    </style>

</resources>
